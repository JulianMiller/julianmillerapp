<% form_for @order,  :html => { :id=>"checkout", :class => "page_forms" }   do |f| %>
  <%= f.error_messages %> 
  <% fields_for(@coupon) do |coupon| %>
  <table>
	<tbody>
		<tr>
		  <th class="item_description">Item Description</th>
		  <th class="price">Price</th>
		  <th class="quantity">Quantity</th>
		  <th class="total">Total</th>
		</tr>
		<tr>
		  <td class="item_description"><%= @order.deal.description %></td>
		  <td class="price"><%= number_to_currency ( @order.deal.price) %> </td>
		  <td class="quantity"><%= coupon.text_field :quantity %></td>
		  <td class="total"><%= h @order.total_price %></td>
		</tr>
	  </tbody>
  </table>
  <% end %>
