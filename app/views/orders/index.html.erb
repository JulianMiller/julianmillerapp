<h1>Listing orders</h1>

<table>
  <tr>    
    <th>First name &nbsp;</th>
    <th>Last name &nbsp;</th>
	<th>deal</th>
    <th colspan="3">Actions &nbsp;</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    
    <td><%=h order.first_name %></td>
    <td><%=h order.last_name %></td>
	<td>
	  <ul>
	  <% order.coupons.each do |c| %>
	  	<li><%=h (c.deal.name + " " + number_to_currency(c.total_spent)) %></li>
	  <% end %>
	  </ul>
	</td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

